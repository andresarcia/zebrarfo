<ol class="breadcrumb">
	<li><a href="#places">Places</a></li>
	<li class="active">{{this.attributes.name}}</li>
</ol>

<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default su-sample-info">
			<div class="panel-body">
				<a href="#places/{{this.attributes.id}}/upload" class="pull-right ws-blue">
					<small>upload more samples</small>
				</a>
				<br>
				<a href="javascript:void(0)" class="pull-right delete-link-place ws-red">
					<small>delete</small>
				</a> 
				<h2 class="col-md-12">{{this.attributes.name}}</h2>
		  		<table class="table table-striped">
			    	<tr>
				  		<td>Total number of samples</td>
				  		<td>{{this.attributes.numberCoordinates}}</td>
				  	</tr>
				  	<tr>
				  		<td>Total distance</td>
				  		<td>{{this.attributes.totalDistance}} <small><b>km</b></small></td>
				  	</tr>
				  	<tr>
				  		<td>Total number of frequencies</td>
				  		<td>{{this.attributes.numberPowerFrequency}}</td>
				  	</tr>
				  	<tr>
				  		<td>Frequencies bandwidth</td>
				  		<td>[{{this.attributes.frequencyMin}}-{{this.attributes.frequencyMax}}] <small><b>MHz</b></small></td>
				  	</tr>
				  	<tr>
				  		<td>Minimum power</td>
				  		<td>{{this.attributes.powerMin}} <small><b>dBm</b></small></td>
				  	</tr>
				  	<tr>
				  		<td>Maximum power</td>
				  		<td>{{this.attributes.powerMax}} <small><b>dBm</b></small></td>
				  	</tr>
				  	<tr>
				  		<td>Average power</td>
				  		<td>{{this.attributes.powerAvg}} <small><b>dBm</b></small></td>
				  	</tr>
				  	<tr>
				  		<td>Standard deviation of power</td>
				  		<td>{{this.attributes.sdPowerAvg}} <small><b>dBm</b></small></td>
				  	</tr>
				  	<tr>
				  		<td colspan="2">Allocation channel</td>
				  	</tr>
				  	<tr>
				  		<td colspan="2">
				  			<select class="form-control" id="allocation-channel">
								<option value="0">American 6Mhz</option>
								<option value="1">European 8Mhz</option>
							</select>
				  		</td>
				  	</tr>
			  	</table>
			  	<button id="su-edit-place" class="btn btn-success btn-xs btn-block btn-without-corners" type="button">
					Edit place
				</button>
			</div>
			<div class="panel-footer">
				<h5 class="pull-right"><small>last update <b>{{this.attributes.friendlyDate}}</b></small></h5> 
				<br>
			</div>
		</div>
  	</div>
	  	
  	<div class="col-md-8">
  		<div id="su-coord-markers-map" style="height:450px;"></div>
  		<div id="su-selected-coordinate-map">
			<div class="page-header" style="text-align:center">
					<h1>Click <small>on any marker will get info of the sample</small></h1>
			</div>
		</div>
  	</div>
</div>